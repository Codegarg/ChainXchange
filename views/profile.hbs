{{!< layouts/main}}

<div class="page-header">
    <h1 class="page-title">Profile</h1>
    <p class="page-subtitle">Manage your account settings and information</p>
</div>

{{#if user}}
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-label">Username</div>
            <div class="stat-value">{{user.username}}</div>
        </div>
        <div class="stat-card">
            <div class="stat-label">Email</div>
            <div class="stat-value">{{user.email}}</div>
        </div>
        <div class="stat-card">
            <div class="stat-label">Wallet Balance</div>
            <div class="stat-value">${{formatNumber user.wallet}}</div>
        </div>
        <div class="stat-card">
            <div class="stat-label">Account Status</div>
            <div class="market-status bullish">
                <div class="status-dot"></div>
                Active
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <div class="card-title">
                <i class="fas fa-user-circle"></i>&nbsp;Account Information
            </div>
            <div class="card-subtitle">Your ChainXchange account details</div>
        </div>
        
        <div style="padding: 1rem 0;">
            <div class="form-group">
                <label class="form-label">Username</label>
                <div class="form-control" style="background: var(--bg-hover); cursor: not-allowed;">
                    {{user.username}}
                </div>
            </div>
            
            <div class="form-group">
                <label class="form-label">Email Address</label>
                <div class="form-control" style="background: var(--bg-hover); cursor: not-allowed;">
                    {{user.email}}
                </div>
            </div>
            
            <div class="form-group">
                <label class="form-label">Wallet Balance</label>
                <div class="form-control" style="background: var(--bg-hover); cursor: not-allowed;">
                    ${{formatNumber user.wallet}}
                </div>
            </div>
        </div>
    </div>

    <div style="text-align: center; margin-top: 2rem;">
        <a href="/portfolio" class="btn btn-primary" style="margin-right: 1rem;">
            <i class="fas fa-chart-pie"></i>&nbsp;View Portfolio
        </a>
        <a href="/" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i>&nbsp;Back to Markets
        </a>
    </div>

{{else}}
    <div class="empty-state">
        <div class="empty-state-icon">
            <i class="fas fa-user-slash"></i>
        </div>
        <div class="empty-state-title">Not Logged In</div>
        <div class="empty-state-text">
            Please sign in to view your profile and account information.
        </div>
        <div style="margin-top: 1rem;">
            <a href="/auth/login" class="btn btn-primary" style="margin-right: 1rem;">
                <i class="fas fa-sign-in-alt"></i>&nbsp;Login
            </a>
            <a href="/auth/signup" class="btn btn-secondary">
                <i class="fas fa-user-plus"></i>&nbsp;Sign Up
            </a>
        </div>
    </div>
{{/if}}