{{!< layouts/main}}

<div class="container">
    <h1>{{ title }}</h1>
    {{#if error}}
        <div class="alert alert-warning">
            {{ error }}
        </div>
    {{/if}}
    
    <div id="market-data">
        {{#if coins}}
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price (USD)</th>
                        <th>Chart</th>
                        <th>Buy</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each coins}}
                    <tr>
                        <td>{{ name }} ({{ symbol }})</td>
                        <td>{{ formatPrice current_price }}</td>
                        <td>
                            <button class="chart-btn" data-coin-id="{{ id }}" data-coin-name="{{ name }}" data-coin-symbol="{{ symbol }}">
                                Chart
                            </button>
                        </td>
                        <td>
                        {{#if ../user}}
                        <form class="buy-form" action="/crypto/buy" method="POST">
                            <input type="hidden" name="coinId" value="{{ id }}">
                            <input type="number" class="buy-input" name="quantity" placeholder="Qty" min="0.000001" step="0.000001" required>
                            <input type="hidden" name="price" value="{{ current_price }}">
                            <button type="submit">Buy</button>
                        </form>
                        {{else}}
                        <a href="/auth/login">Log in to buy</a>
                        {{/if}}
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <p>No cryptocurrency data available.</p>
    {{/if}}

    <div class="actions">
        {{#if user}}
            <a href="/profile" class="btn">View Your Profile</a>
            <a href="/portfolio" class="btn">View Your Portfolio</a>
        {{else}}
            <p>Log in to view your profile and portfolio.</p>
        {{/if}}
    </div>
</div>

<!-- Chart Modal -->
<div id="chartModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h2 id="chartTitle">Loading...</h2>
            <span class="close">&times;</span>
        </div>
        <div class="modal-body">
            <div class="chart-controls">
                <button class="chart-period-btn active" data-days="1">1D</button>
                <button class="chart-period-btn" data-days="7">7D</button>
                <button class="chart-period-btn" data-days="30">30D</button>
                <button class="chart-period-btn" data-days="90">90D</button>
                <button class="chart-period-btn" data-days="365">1Y</button>
            </div>
            <div class="chart-container">
                <canvas id="priceChart"></canvas>
            </div>
            <div id="chartLoading" class="loading-spinner">Loading chart data...</div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="/js/crypto-charts.js"></script>