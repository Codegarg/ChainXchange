{{!< layouts/main}}

<div class="page-header">
    <h1 class="page-title">Your Portfolio</h1>
    <p class="page-subtitle">Track your cryptocurrency investments</p>
</div>

{{#if error}}
    <div class="alert alert-danger">
        <div class="alert-content">
            <svg class="alert-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="12" y1="8" x2="12" y2="12"></line>
                <line x1="12" y1="16" x2="12.01" y2="16"></line>
            </svg>
            <span>{{error}}</span>
        </div>
    </div>
{{/if}}

{{#if success}}
    <div class="alert alert-success">
        <div class="alert-content">
            <svg class="alert-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22 4 12 14.01 9 11.01"></polyline>
            </svg>
            <span>{{success}}</span>
        </div>
    </div>
{{/if}}

{{#if holdings.length}}
    <!-- Portfolio Summary -->
    <div class="portfolio-summary">
        <div class="portfolio-value">
            <div class="portfolio-label">Total Portfolio Value</div>
            <div class="portfolio-amount">${{formatPrice portfolioValue}}</div>
            <div class="portfolio-change positive">+2.34%</div>
        </div>
        <div class="portfolio-value">
            <div class="portfolio-label">24h Change</div>
            <div class="portfolio-amount">$1,234.56</div>
            <div class="portfolio-change positive">+2.34%</div>
        </div>
        <div class="portfolio-value">
            <div class="portfolio-label">Total Coins</div>
            <div class="portfolio-amount">{{holdings.length}}</div>
        </div>
    </div>

    <!-- Holdings Table -->
    <div class="card">
        <div class="card-header">
            <div class="card-title">Your Holdings</div>
            <div class="card-subtitle">Current positions in your portfolio</div>
        </div>
        
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>Asset</th>
                        <th>Quantity</th>
                        <th>Avg. Buy Price</th>
                        <th>Current Price</th>
                        <th>Total Value</th>
                        <th>P&L</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each holdings}}
                    <tr data-crypto-id="{{coinId}}" class="fade-in">
                        <td>
                            <div class="crypto-name">
                                <div>
                                    <div class="crypto-name-text">{{crypto}}</div>
                                    <div class="crypto-symbol">{{coinId}}</div>
                                </div>
                            </div>
                        </td>
                        <td class="quantity-cell">{{formatPrice quantity}}</td>
                        <td class="price-cell">${{formatPrice averageBuyPrice}}</td>
                        <td class="price-cell">${{formatPrice currentPrice}}</td>
                        <td class="value-cell">${{formatPrice (multiply quantity currentPrice)}}</td>
                        <td class="change-cell {{#if (eq currentPrice averageBuyPrice)}}change-neutral{{else}}{{#if (gt currentPrice averageBuyPrice)}}change-positive{{else}}change-negative{{/if}}{{/if}}">
                            {{#if (eq currentPrice averageBuyPrice)}}0.0%{{else}}{{#if (gt currentPrice averageBuyPrice)}}+{{/if}}{{formatPrice (subtract (multiply (divide currentPrice averageBuyPrice) 100) 100)}}%{{/if}}
                        </td>
                        <td>
                            <form action="/crypto/sell" method="POST" class="action-form">
                                <input type="hidden" name="coinId" value="{{coinId}}">
                                <input type="hidden" name="price" value="{{currentPrice}}">
                                <input type="number" 
                                       name="quantity" 
                                       min="0.000001" 
                                       max="{{quantity}}" 
                                       step="0.000001" 
                                       required 
                                       placeholder="0.00"
                                       class="form-control quantity-input">
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="fas fa-minus-circle"></i>&nbsp;Sell
                                </button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
{{else}}
    <div class="empty-state">
        <div class="empty-state-icon">
            <i class="fas fa-chart-pie"></i>
        </div>
        <div class="empty-state-title">Your Portfolio is Empty</div>
        <div class="empty-state-text">
            Start trading to build your cryptocurrency portfolio and track your investments.
        </div>
        <a href="/" class="btn btn-primary" style="margin-top: 1rem;">
            <i class="fas fa-shopping-cart"></i>&nbsp;Start Trading
        </a>
    </div>
{{/if}}

<div style="margin-top: 2rem; text-align: center;">
    <a href="/" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i>&nbsp;Back to Markets
    </a>
</div>
</div>